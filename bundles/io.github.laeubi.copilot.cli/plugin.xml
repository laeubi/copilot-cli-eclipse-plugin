<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <!-- Plugin configuration for GitHub Copilot CLI integration -->
   
   <!-- Terminal connector for Copilot CLI -->
   <extension point="org.eclipse.terminal.control.connectors">
      <connector
            class="io.github.laeubi.copilot.cli.connector.CopilotCliConnector"
            hidden="false"
            id="io.github.laeubi.copilot.cli.connector"
            name="Copilot CLI"/>
   </extension>
   
   <!-- Terminal launcher delegate for Copilot CLI -->
   <extension point="org.eclipse.terminal.view.ui.launcherDelegates">
      <delegate
            class="io.github.laeubi.copilot.cli.launcher.CopilotCliLauncherDelegate"
            id="io.github.laeubi.copilot.cli.launcher"
            label="Copilot CLI">
      </delegate>
   </extension>
   
   <!-- Command contributions -->
   <extension point="org.eclipse.ui.commands">
      <category
            id="io.github.laeubi.copilot.cli.commands.category"
            name="GitHub Copilot CLI">
      </category>
      <command
            categoryId="io.github.laeubi.copilot.cli.commands.category"
            id="io.github.laeubi.copilot.cli.command.openPrompt"
            name="Open Copilot Prompt"
            description="Open Copilot CLI terminal for the current context">
      </command>
      <command
            categoryId="io.github.laeubi.copilot.cli.commands.category"
            id="io.github.laeubi.copilot.cli.command.askCopilot"
            name="Ask Copilot"
            description="Ask Copilot from Navigator or Project Explorer">
      </command>
   </extension>

   <!-- Key bindings -->
   <extension point="org.eclipse.ui.bindings">
      <key
            commandId="io.github.laeubi.copilot.cli.command.openPrompt"
            contextId="org.eclipse.ui.contexts.window"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="M1+M3+C"/>
   </extension>

   <!-- Handler contributions -->
   <extension point="org.eclipse.ui.handlers">
      <handler
            class="io.github.laeubi.copilot.cli.handler.OpenPromptHandler"
            commandId="io.github.laeubi.copilot.cli.command.openPrompt">
      </handler>
      <handler
            class="io.github.laeubi.copilot.cli.handler.AskCopilotHandler"
            commandId="io.github.laeubi.copilot.cli.command.askCopilot">
      </handler>
   </extension>
   
   <!-- Context menu contributions for Navigator and Project Explorer -->
   <extension point="org.eclipse.ui.menus">
      <!-- Project Explorer uses Common Navigator framework -->
      <menuContribution
            allPopups="false"
            locationURI="popup:org.eclipse.ui.navigator.ProjectExplorer#PopupMenu?after=additions">
         <command
               commandId="io.github.laeubi.copilot.cli.command.askCopilot"
               label="Ask Copilot"
               style="push">
         </command>
      </menuContribution>
      <!-- Also add to common navigator general popup -->
      <menuContribution
            allPopups="false"
            locationURI="popup:org.eclipse.ui.popup.any?after=additions">
         <command
               commandId="io.github.laeubi.copilot.cli.command.askCopilot"
               label="Ask Copilot"
               style="push">
            <visibleWhen checkEnabled="false">
               <with variable="selection">
                  <count value="1"/>
               </with>
            </visibleWhen>
         </command>
      </menuContribution>
      <!-- Package Explorer -->
      <menuContribution
            allPopups="false"
            locationURI="popup:org.eclipse.jdt.ui.PackageExplorer#PopupMenu?after=additions">
         <command
               commandId="io.github.laeubi.copilot.cli.command.askCopilot"
               label="Ask Copilot"
               style="push">
         </command>
      </menuContribution>
      <!-- Resource Navigator (legacy) -->
      <menuContribution
            allPopups="false"
            locationURI="popup:org.eclipse.ui.views.ResourceNavigator#PopupMenu?after=additions">
         <command
               commandId="io.github.laeubi.copilot.cli.command.askCopilot"
               label="Ask Copilot"
               style="push">
         </command>
      </menuContribution>
   </extension>
   
</plugin>
